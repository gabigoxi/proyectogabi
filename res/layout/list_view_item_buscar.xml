<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textviewbuscar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:padding="10dp"
        android:shadowColor="#8a6603"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="85px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="AÃ±adir Serie a: Mis Series"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="85px"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:text="Volver a la lista de Series"
        android:textStyle="bold" />

     <Button
         android:id="@+id/button16"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/button9"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="42dp"
         android:textSize="15sp"
         android:text="Ir a la lista de capitulos"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/textViewInfo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="150dp"
         android:text=""
         android:textSize="14dp"
         android:textStyle="bold"
         android:visibility="visible" />
     
     <TextView
         android:id="@+id/textViewInfo2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="74dp"
         android:text=""
         android:visibility="visible" />
     
      <ImageView android:id="@+id/feed_image"
        android:layout_width="60dp" 
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingRight="3dp"
        android:paddingLeft="2dp"/>
 

</RelativeLayout>