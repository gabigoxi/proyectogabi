<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="10dp" >


    <TextView
        android:id="@+id/textviewmomento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:padding="5dp"
        android:shadowColor="#8a6603"
        android:textColor="#FF7C00"
        android:layout_marginTop="2dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:layout_below="@+id/textviewmomento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textviewmomento2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="10dp"
            android:shadowColor="#8a6603"
            android:textColor="#FF7C00"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </ScrollView>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_above="@+id/layout_bottom_buttons"
        android:text="AÃ±adir Serie a: Mis Series"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_bottom_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button12"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Volver a la lista de Series"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button14"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ir a la lista de capitulos"
            android:textSize="15sp"
            android:textStyle="bold" />
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/feed_image2"
        android:layout_width="480dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_below="@+id/textviewmomento"
        android:contentDescription="@string/desc"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="3dp"
        android:visibility="visible" />

</RelativeLayout>